{% extends 'base.html.twig' %}

{% block title %}Support : {{ support.label }}
{% endblock %}

{% block body %}
	<h1>Support : {{ support.label }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ support.id }}</td>
			</tr>
			<tr>
				<th>Type de support</th>
				<td>{{ support.supportType.label }}</td>
			</tr>
			<tr>
				<th>Label</th>
				<td>{{ support.label }}</td>
			</tr>
			<tr>
				<th>Dernière édition</th>
				<td>{{ support.dateedited ? support.dateedited|date('d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Est actif</th>
				<td>{{ support.isactive ? 'Oui' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Est éditable</th>
				<td>{{ support.iseditable ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>
			<a class="d-inline-block btn btn-primary" href="{{ path('support_index') }}"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
			<a class="d-inline-block btn btn-primary" href="{{ path('support_edit', {'id': support.id}) }}"><i class="far fa-edit"></i> Editer</a>

	{{ include('support/_delete_form.html.twig') }}
{% endblock %}
