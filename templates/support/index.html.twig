{% extends 'base.html.twig' %}

{% block title %}Liste des supports
{% endblock %}

{% block body %}
	<h1>Liste des supports</h1>

	<a href="{{ path('support_new') }}" class="btn btn-primary my-2">Ajouter</a>
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th scope="col">Support</th>
				<th scope="col">Type</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for support in supports %}
				<tr>
					<td class="align-middle">{{ support.label }}</td>
					<td class="align-middle">{{ support.supportType ? support.supportType.label : 'Non d√©fini' }}</td>
					<td class="align-middle">
						<a href="{{ path('support_show', {'id': support.id}) }}">
							<i class="far fa-eye"></i>
							Voir</a><br>
						<a href="{{ path('support_edit', {'id': support.id}) }}">
							<i class="far fa-edit"></i>
							Editer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
