{% extends 'base.html.twig' %}

{% block title %}Liste des prospects
{% endblock %}

{% block body %}
	<h1>Liste des prospects</h1>
	<a href="{{ path('prospect_new') }}" class="btn btn-primary my-2">Ajouter</a>

	<div class="row">
		<div class="col-12">
			{{ form_start(form) }}
			<div class="search-form row my-3">
				<div class="col-4">
					{{ form_widget(form.name) }}
				</div>
				<div class="col-4">
					{{ form_widget(form.postal_code) }}
				</div>
				<div class="col-4">
					{{ form_widget(form.activity_area) }}
				</div>
				<div class="col-12">
					<button class="btn btn-primary d-block mx-auto mt-2">
						<i class="fas fa-search"></i>
						{{ button_label|default('Rechercher') }}</button>
				</div>
			</div>
			{{ form_end(form) }}
			<ul class="list-group">
				{% for prospect in prospects %}
					<li class="list-group-item prospects-item">
						<div class="row prospects-item-row">
							<div class="col-7">
								<strong>{{ prospect.name }}</strong>
								<br>
								<small>{{ prospect.siret }}</small>
							</div>
							<div class="col-5">
								<ul class="list-unstyled d-flex flex-row">
									<li class="prospects-item-link">
										<a href="{{ path('prospect_show', {id:prospect.id}) }}">
											<i class="far fa-eye"></i>
											Voir</a>
									</li>
									<li class="prospects-item-link">
										<a href="{{ path('prospect_edit', {id:prospect.id}) }}">
											<i class="far fa-edit"></i>
											Editer</a>
									</li>
									<li class="prospects-item-link">
										<a href="{{ path('prospect_delete', {id:prospect.id}) }}">
											<i class="far fa-trash-alt"></i>
											Supprimer</a>
									</li>
								</ul>
							</div>
						</div>
					</li>
				{% else %}
					<p>
						Aucun prospect n'a été trouvé.
					</p>
				{% endfor %}
			</ul>
			{{ knp_pagination_render(prospects) }}
		</div>
	</div>
{% endblock %}
