<form method="post" action="{{ path('prospect_delete', {'id': prospect.id}) }}" class="d-inline-block" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cet item ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prospect.id) }}">
    <button class="btn btn-primary d-inline-block"><i class="far fa-trash-alt"></i> Supprimer</button>
</form>
