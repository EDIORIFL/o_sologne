{% extends 'base.html.twig' %}

{% block title %}{{ support_type.label }}
{% endblock %}

{% block body %}
	<h1>{{ support_type.label }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ support_type.id }}</td>
			</tr>
			<tr>
				<th>Label</th>
				<td>{{ support_type.label }}</td>
			</tr>
			<tr>
				<th>Est actif</th>
				<td>{{ support_type.isactive ? 'Oui' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Est éditable</th>
				<td>{{ support_type.iseditable ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>
	<a class="d-inline-block btn btn-primary" href="{{ path('support_type_index') }}">
		<i class="fas fa-arrow-left"></i>
		Retour à la liste</a>
	<a class="d-inline-block btn btn-primary" href="{{ path('support_type_edit', {'id': support_type.id}) }}">
		<i class="far fa-edit"></i>
		Editer</a>

	{{ include('support_type/_delete_form.html.twig') }}
{% endblock %}
