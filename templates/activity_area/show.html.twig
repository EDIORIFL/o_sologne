{% extends 'base.html.twig' %}

{% block title %}
	{{ activity_area.label }}
{% endblock %}

{% block body %}
	<h1>{{ activity_area.label }}</h1>
	<a class="d-inline-block btn btn-primary" href="{{ path('activity_area_index') }}">
		<i class="fas fa-arrow-left"></i>
		Retour Ã  la liste</a>
	<a class="d-inline-block btn btn-primary" href="{{ path('activity_area_edit', {'id': activity_area.id}) }}">
