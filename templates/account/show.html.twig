{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Profil</th>
                <td>{{ account.profil }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ account.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ account.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Iseditable</th>
                <td>{{ account.iseditable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ account.isactive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ account.createdat ? account.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ account.updatedat ? account.updatedat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('account_index') }}">back to list</a>

    <a href="{{ path('account_edit', {'id': account.id}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
