{% extends 'base.html.twig' %}

{% block title %}Account index{% endblock %}

{% block body %}
    <h1>Account index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Profil</th>
                <th>Login</th>
                <th>Password</th>
                <th>Name</th>
                <th>Iseditable</th>
                <th>Isactive</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.profil }}</td>
                <td>{{ account.login }}</td>
                <td>{{ account.password }}</td>
                <td>{{ account.name }}</td>
                <td>{{ account.iseditable ? 'Yes' : 'No' }}</td>
                <td>{{ account.isactive ? 'Yes' : 'No' }}</td>
                <td>{{ account.createdat ? account.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ account.updatedat ? account.updatedat|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('account_show', {'id': account.id}) }}">show</a>
                    <a href="{{ path('account_edit', {'id': account.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('account_new') }}">Create new</a>
{% endblock %}
