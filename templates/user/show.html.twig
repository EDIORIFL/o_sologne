{% extends 'base.html.twig' %}

{% block title %}Utilisateur :
	{{ user.name }}
{% endblock %}

{% block body %}
	<h1>Utilisateur :
		{{ user.name }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Login</th>
				<td>{{ user.login }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>
					{% for role in user.roles %}
						{% if role == "ROLE_USER" %}
							Utilisateur
						{% elseif role == "ROLE_SUPERADMIN" %}
							Super Administrateur
						{% elseif role == "ROLE_ADMIN" %}
							Administrateur
						{% endif %}
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Profil</th>
				<td>{{ user.profil }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ user.name }}</td>
			</tr>
			<tr>
				<th>Iseditable</th>
				<td>{{ user.iseditable ? 'Oui' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Isactive</th>
				<td>{{ user.isactive ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>
	<a class="d-inline-block btn btn-primary" href="{{ path('user_index') }}">
		<i class="fas fa-arrow-left"></i>
		Retour Ã  la liste</a>
	<a class="d-inline-block btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">
		<i class="far fa-edit"></i>
		Editer</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
