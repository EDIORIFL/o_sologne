{% extends 'base.html.twig' %}

{% block title %}Liste des commandes
{% endblock %}

{% block body %}
	<h1>Liste des commandes</h1>
	<a href="{{ path('command_new') }}" class="btn btn-primary">Ajouter une commande</a>

	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Support</th>
				<th scope="col">Date de signature</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for command in commands %}
				<tr>
					<td class="align-middle">{{ command.prospect ? command.prospect.name : 'Non défini' }}</td>
					<td class="align-middle">{{ command.support ? command.support.label : 'Non défini' }}</td>
					<td class="align-middle">{{ command.datesigned|date('d/m/Y') }}</td>
					<td class="align-middle">
						<a href="{{ path('command_show', {'id': command.id}) }}">
							<i class="far fa-eye"></i>
							Voir</a><br>
						<a href="{{ path('command_edit', {'id': command.id}) }}">
							<i class="far fa-edit"></i>
							Editer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
