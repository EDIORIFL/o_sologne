{% extends 'base.html.twig' %}

{% block title %}{{ command.prospect ? command.prospect.name : 'Commande' }}{% endblock %}

{% block body %}
    <h1>{{ command.prospect ? command.prospect.name : 'Commande' }}</h1>

	<div class="row">
		<div class="col-8">
			<p class="prospect-infos">
			{% if command.support is not null %}
				Type de support :
				{{ command.support.supporttype.label }}<br>
				Support :
				{{ command.support.label }}<br>
				Référence : 
				{{ command.reference }}
			{% endif %}
				RIB :
				{{ command.rib }}<br>
				Mode de paiement :
				{{ command.paymentmode }}<br>
				Paiement :
				{{ command.payment }}
			</p>
		</div>
		<div class="col-4">
			<a class="d-inline-block btn btn-primary" href="{{ path('command_index') }}"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
			<a class="d-inline-block btn btn-primary" href="{{ path('command_edit', {'id': command.id}) }}"><i class="far fa-edit"></i> Editer</a>
      {{ include('command/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
