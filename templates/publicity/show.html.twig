{% extends 'base.html.twig' %}

{% block title %}Publicité
{% endblock %}

{% block body %}
	<h1>Publicité</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ publicity.id }}</td>
			</tr>
			<tr>
				<th>Prospect</th>
				<td>
					{% if publicity.prospect %}
						<a href="{{ path('prospect_show', {id: publicity.prospect.id}) }}">{{ publicity.prospect ? publicity.prospect.name : '' }}</a>
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Ficher</th>
				<td>{{ publicity.filename }}</td>
			<tr>
				<th>Créé le</th>
				<td>{{ publicity.createdat ? publicity.createdat|date('d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Dernière modification</th>
				<td>{{ publicity.updatedat ? publicity.updatedat|date('d/m/Y') : '' }}</td>
			</tr>
		</tbody>
	</table>
    <div class="row">
        <div class="col-12 text-center">
			<a class="d-inline-block btn btn-primary" href="{{ path('publicity_index') }}"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
			<a class="d-inline-block btn btn-primary" href="{{ path('publicity_edit', {'id': publicity.id}) }}"><i class="far fa-edit"></i> Editer</a>
	        {{ include('publicity/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
