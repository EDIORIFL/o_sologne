{% extends 'base.html.twig' %}

{% block title %}Publicity index{% endblock %}

{% block body %}
    <h1>Publicity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idprospect</th>
                <th>Filename</th>
                <th>Isactive</th>
                <th>Iseditable</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicity in publicities %}
            <tr>
                <td>{{ publicity.id }}</td>
                <td>{{ publicity.idprospect }}</td>
                <td>{{ publicity.filename }}</td>
                <td>{{ publicity.isactive ? 'Yes' : 'No' }}</td>
                <td>{{ publicity.iseditable ? 'Yes' : 'No' }}</td>
                <td>{{ publicity.createdat ? publicity.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ publicity.updatedat ? publicity.updatedat|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('publicity_show', {'id': publicity.id}) }}">show</a>
                    <a href="{{ path('publicity_edit', {'id': publicity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publicity_new') }}">Create new</a>
{% endblock %}
